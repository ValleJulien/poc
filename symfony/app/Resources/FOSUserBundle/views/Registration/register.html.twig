{% extends "FOSUserBundle::fos_layout.html.twig" %}


{% block title %}
    Registration
{% endblock title %}


{% block fos_user_content %}

    <form action="{{ path('fos_user_registration_register') }}" method="POST" class="fos_user_registration_register">

        <div class="form-group">
            <label for="fos_user_registration_form_email" class="required">Adresse e-mail</label>
            <input id="fos_user_registration_form_email" name="fos_user_registration_form[email]" required="required" type="email">
        </div>

        <div class="form-group">
            <label for="fos_user_registration_form_username" class="required">Nom d'utilisateur</label>
            <input id="fos_user_registration_form_username" name="fos_user_registration_form[username]" required="required" maxlength="180" pattern=".{2,}" type="text">
        </div>

        <div class="form-group">
            <label for="fos_user_registration_form_plainPassword_first" class="required">Mot de passe</label>
            <input id="fos_user_registration_form_plainPassword_first" name="fos_user_registration_form[plainPassword][first]" required="required" type="password">
        </div>

        <div class="form-group">
            <label for="fos_user_registration_form_plainPassword_second" class="required">Répéter le mot de passe</label>
            <input id="fos_user_registration_form_plainPassword_second" name="fos_user_registration_form[plainPassword][second]" required="required" type="password">
        </div>

        <input id="fos_user_registration_form__token" name="fos_user_registration_form[_token]" value="Ao-glFjPesLvODVFFTyEzp-nKLyM5f9z44KHuSwiJ80" type="hidden">

        <div class="form-group">
            <button class="btn btn-primary" type="submit" value="{{ 'registration.submit'|trans }}">Sign Up</button>
        </div>
    </form>

{% endblock fos_user_content %}