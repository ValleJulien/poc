{% extends '::layout.html.twig' %}

    {% block title %}
        {{ title }}
    {% endblock title %}

    {% block content %}
        <div class="row">
            <!-- Book Content Column -->
            <div class="col-lg-8">
                <!-- Title -->
                <h1 class="mt-4">{{ book.title }}</h1>

                <!-- Author -->
                <p class="lead">
                    by {{ book.authorDirector }}
                </p>
                <hr>

                <!-- Date/Time -->
                <p>Posted {{ book.updatedAt|date("m/d/Y") }}</p>
                <hr>

                <!-- Preview Image -->
                <img class="img-fluid rounded" src="http://placehold.it/900x300" alt="">
                <hr>

                <!-- Post Content -->
                <p class="lead">
                    <b>Summary : </b>
                    {{ book.summary }}
                </p>

                <blockquote class="blockquote">
                    <footer class="blockquote-footer">Isbn :
                        <cite title="Source Title">{{ book.isbn }}</cite>
                    </footer>
                </blockquote>
                <hr>

                <!-- Comments Form -->
                <div class="card my-4">
                    <h5 class="card-header">Leave a Comment:</h5>
                    <div class="card-body">
                        <form>
                            <div class="form-group">
                                <textarea class="form-control" rows="3"></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    {% endblock content %}